<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recipefull_IMG_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/recipefull_TXT_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:text="tags"
            android:textSize="15sp"
            android:textColor="#33606060" />

        <TextView
            android:id="@+id/recipefull_TXT_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:text="Title"
            android:textSize="35sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="17dp"
            >

            <TextView
                android:id="@+id/recipefull_TXT_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="minutes"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="#33303030" />

            <TextView
                android:id="@+id/recipefull_TXT_persons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="persons"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#33303030" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="35dp"
            >

        <TextView
            android:id="@+id/recipefull_TXT_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="left"
            android:text="instructions"
            android:textSize="20sp"
            android:textColor="#33303030" />

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>



    <TextView
        android:id="@+id/recipefull_TXT_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="17dp"
        android:text="by"
        android:textSize="15sp"
        android:textColor="#33303030" />


</RelativeLayout>